{
  "name": "typecon",
  "version": "0.6.0",
  "description": "Compiles Typescript code into CON",
  "repository": "https://github.com/MarcosPCB/TypeCon",
  "main": "./dist/main.js",
  "author": "ItsMarcos",
  "license": "GPL-3.0-only",
  "bin": {
    "tcc": "dist/main.js"
  },
  "scripts": {
    "dev": "IS_DEV=true ts-node-dev --inspect --transpile-only --ignore-watch node_modules src/main.ts",
    "dev-mac": "IS_DEV=true ts-node-dev --inspect --transpile-only --ignore-watch node_modules src/main.ts -c \"test/data/test.ts\" -of \"test/eduke32/Eduke32.app/Contents/Resources\" -ld",
    "dev-win": "ts-node-dev --inspect --transpile-only --ignore-watch node_modules src/main.ts -c \"test/data/test.ts\" -ld",
    "dev-debug": "ts-node-dev --inspect --transpile-only --ignore-watch node_modules src/main.ts -debug eduke32.exe",
    "parse": "IS_DEV=true ts-node-dev --inspect --transpile-only --ignore-watch node_modules src/main.ts -c \"test/data/test.ts\" -p",
    "debug": "IS_DEV=true ts-node-dev --inspect-brk --transpile-only --ignore-watch node_modules src/main.ts",
    "build": "tsc",
    "start": "node dist/main.js",
    "postbuild": "node postBuild.js",
    "bin-pkg": "yarn build && yarn pkg . && mv ./pkg/typecon-win.exe ./pkg/win/tcc.exe && cp -r ./include ./pkg/win/include && mv ./pkg/typecon-macos ./pkg/mac/tcc && cp -r ./include ./pkg/mac/include && mv ./pkg/typecon-linux ./pkg/linux/tcc && cp -r ./include ./pkg/linux/include",
    "release": "yarn run build && yarn version --patch && git push && git push --tags"
  },
  "pkg": {
    "scripts": "dist/**/*.js",
    "targets": [
      "node18-win-x64",
      "node18-mac-x64",
      "node18-linux-x64"
    ],
    "assets": [
      "./include/**/*",
      "./templates/**/*"
    ],
    "outputPath": "./pkg/"
  },
  "dependencies": {
    "fs-extra": "^11.3.0",
    "inquirer": "^12.5.0",
    "ts-morph": "^25.0.1"
  },
  "devDependencies": {
    "@types/node": "^22.13.11",
    "pkg": "^5.8.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.2"
  }
}
